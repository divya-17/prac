<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/myhiber</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class="org.hibernate.entity.Student"/>
        <mapping class="org.hibernate.entity.Address"/>
        <mapping class="org.hibernate.entity.Answer"/>
        <mapping class="org.hibernate.entity.Question"/>
        <mapping class="org.hibernate.entity.Employee"/>
        <mapping class="org.hibernate.entity.Account"/>
        <mapping class="org.hibernate.entity.Emp"/>
        <mapping class="org.hibernate.entity.Project"/>
    </session-factory>
</hibernate-configuration>


